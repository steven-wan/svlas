<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stevenwan.svlas.mapper.StockUserInfoMapper">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        code, user_id, cost_price, nums, profit_price, profit_rate, create_time, update_user, update_time
    </sql>

    <!-- 通用查询映射结果 -->
    <resultMap id="stockStockUserInfoResultMap" type="com.stevenwan.svlas.entity.StockUserInfoEntity">
        <result column="id" property="id"/>
        <result column="code" property="code"/>
        <result column="user_id" property="userId"/>
        <result column="cost_price" property="costPrice"/>
        <result column="current_price" property="currentPrice"/>
        <result column="nums" property="nums"/>
        <result column="profit_price" property="profitPrice"/>
        <result column="profit_rate" property="profitRate"/>
    </resultMap>

    <select id="selectStockUserInfo" resultMap="stockStockUserInfoResultMap">
        select *
        from stock_user_info
        where code LIKE #{code}
    </select>


    <!-- 通用查询映射结果 -->
    <resultMap id="stockUserInfoJobResultMap" type="com.stevenwan.svlas.dto.stock.StockUserInfoJobDTO">
        <result column="id" property="id"/>
        <result column="code" property="code"/>
        <result column="cost_price" property="costPrice"/>
        <result column="nums" property="nums"/>
        <result column="type" property="type"/>
    </resultMap>

    <select id="selectStockUserInfoJobList" resultMap="stockUserInfoJobResultMap">
        SELECT su.id,
               su.`code`,
               su.cost_price,
               su.nums,
               s.type
        FROM stock_user_info su
                 JOIN stock s ON s.`code` = su.`code`
        WHERE su.user_id = #{userId}
    </select>
</mapper>
